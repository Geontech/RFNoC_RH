ACLOCAL_AMFLAGS = -I m4 -I${OSSIEHOME}/share/aclocal/ossie
AUTOMAKE_OPTIONS = subdir-objects

lib_LTLIBRARIES = libRFNoC_RH.la

pkgconfigdir = $(libdir)/pkgconfig
pkgconfig_DATA = RFNoC_RH.pc

xmldir = $(prefix)
dist_xml_DATA = ../RFNoC_RH.spd.xml

distclean-local:
	rm -rf autom4te.cache
	rm -rf m4
	rm -f aclocal.m4
	rm -f config.*
	rm -f configure
	rm -f depcomp
	rm -f install-sh
	rm -f ltmain.sh
	rm -f Makefile.in
	rm -f missing

# Sources, libraries and library directories are auto-included from a file
# generated by the REDHAWK IDE. You can remove/modify the following lines if
# you wish to manually control these options.
include $(srcdir)/Makefile.am.ide
libRFNoC_RH_la_SOURCES = $(redhawk_SOURCES_auto)
libRFNoC_RH_la_LIBADD = $(SOFTPKG_LIBS) $(REDHAWK_LIBS)
libRFNoC_RH_la_CPPFLAGS = -I $(srcdir)/include $(SOFTPKG_CFLAGS) $(REDHAWK_CFLAGS) $(BOOST_CPPFLAGS)
libRFNoC_RH_la_CXXFLAGS = -Wall

redhawk_HEADERS_auto ?= $(filter include/%,$(redhawk_SOURCES_auto))
include_HEADERS = $(redhawk_HEADERS_auto)
